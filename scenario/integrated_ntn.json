{
  "name": "integrated_ntn",
  "resultsPath": "../results/",
  "logOnFile": true,
  "duration": 1,
  "phyLayer": [
    {
      "type": "3GPP",
      "environment": "NTN-Suburban",
      "attributes": [
        {
          "name": "UpdatePeriod",
          "value": 1e-3
        }
      ],
      "channel": {
        "propagationLossModel": {
          "name": "ns3::ThreeGppNTNSuburbanPropagationLossModel",
          "attributes": [
            {
              "name": "Frequency",
              "value": 20e9
            },
            {
              "name": "ShadowingEnabled",
              "value": true
            }
          ]
        },
        "conditionModel": {
          "name": "ns3::ThreeGppNTNSuburbanChannelConditionModel",
          "attributes": [
            {
              "name": "UpdatePeriod",
              "value": 0
            }
          ]
        }
      }
    }
  ],
  "macLayer": [
    {
      "type": "NullNtnDemo",
      "timeResolution": 10e-3,
      "bandwidth": 400e6,
      "rbBandwidth": 120e3,
      "satEirpDensity": 40,
      "ueAntennaNoiseFigure": 1.2
      // here we can do beamforming and compute the SNR every time
    }
  ],
  "nodes": [
    {
      // GEO Satellite
      "type": "GeoSat",
      "netDevices": [
        {
          "type": "simple",
          "name": "ns3::SimpleNetDevice",
          "attributes": [],
          // TODO: What's the relation between netDevices and antennas?
          // Antenna may be configured globally on the node. In this way, all the netDevices will use the same antenna.
          // If we want to configure different antennas for different netDevices, we have to specify the antenna in the netDevice.
          "antenna": {
            "name": "ns3::UniformPlanarArray",
            "attributes": [
              {
                "name": "NumColumns",
                "value": 1
              },
              {
                "name": "NumRows",
                "value": 1
              },
              {
                "name": "AntennaElement",
                "value": {
                  "name": "ns3::CircularApertureAntennaModel",
                  "attributes": [
                    {
                      "name": "AntennaMaxGainDb",
                      "value": 58.5
                    },
                    {
                      "name": "AntennaCircularApertureRadius",
                      "value": 2.5
                    },
                    {
                      "name": "OperatingFrequency",
                      "value": 20e9
                    },
                    {
                      "name": "AntennaInclination",
                      "value": 3.14 // 180.0
                    }
                  ]
                }
              }
            ]
          }
        }
      ],
      "mobilityModel": {
        "name": "ns3::GeocentricConstantPositionMobilityModel",
        "attributes": [
          {
            "name": "Position",
            // Padova coordinates
            "value": [45.40869, 11.89448, 35786000.0]
          }
        ]
      }
    },
    {
      // Ground Node
      "netDevices": [
        {
          "type": "simple",
          "name": "ns3::SimpleNetDevice",
          "attributes": [],
          // TODO: What's the relation between netDevices and antennas?
          // Antenna may be configured globally on the node. In this way, all the netDevices will use the same antenna.
          // If we want to configure different antennas for different netDevices, we have to specify the antenna in the netDevice.
          "antenna": {
            "name": "ns3::UniformPlanarArray",
            "attributes": [
              {
                "name": "NumColumns",
                "value": 1
              },
              {
                "name": "NumRows",
                "value": 1
              },
              {
                "name": "AntennaElement",
                "value": {
                  "name": "ns3::CircularApertureAntennaModel",
                  "attributes": [
                    {
                      "name": "AntennaMaxGainDb",
                      "value": 58.5
                    },
                    {
                      "name": "AntennaCircularApertureRadius",
                      "value": 2.5
                    },
                    {
                      "name": "OperatingFrequency",
                      "value": 20e9
                    },
                    {
                      "name": "AntennaInclination",
                      "value": 3.14 // 180.0
                    }
                  ]
                }
              }
            ]
          }
        }
      ],
      "mobilityModel": {
        "name": "ns3::GeocentricConstantPositionMobilityModel",
        "attributes": [
          {
            "name": "Position",
            // Padova coordinates
            "value": [45.40869, 11.89448, 14.0]
          }
        ]
      }
    }
  ],
  "logComponents": ["Scenario", "ThreeGppPropagationLossModel", "ChannelConditionModel"]
}
